<h1>Task Log</h1>
<p><%= link_to "Add new task", new_todo_path, :class=>'btn btn-primary' %></p>

<h2>Current Tasks</h2>
<ul>
	<% @todos.each do |t| %>
			<li>
				<h4><%= t.name %></h4>
				<small><%= link_to "Done", complete_todo_path(t), :method => :put %></small>
				<small><%= link_to "Edit", edit_todo_path(t) %></small> 
				<small><%= link_to "Remove", todo_path(t), data: { confirm: "Remove?" }, :method => :delete %></small>
			</li>
		<% end %>
</ul>


<h2>Completed Tasks</h2>
<ul>
<% @completes.each do |t| %>
	<li style="color:#E0E0E0">
		<h4 style="color:#E0E0E0"><%= t.name %></h4>
		<small><%= link_to "Remove", todo_path(t), data: { confirm: "Remove?" }, :method => :delete %></small>
	</li>
<% end %> 
</ul>


